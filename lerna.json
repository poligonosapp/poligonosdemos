{
    "version": "2.4.0",
    "npmClient": "yarn",
    "command": {
      "publish": {
        "ignoreChanges": ["ignored-file", "*.md"],
        "message": "chore(release): publish",
        "registry": "https://npm.pkg.github.com"
      },
      "bootstrap": {
        "ignore": "component-*",
        "npmClientArgs": ["--no-package-lock"]
      }
    },
    "packages": ["packages/*","pwa_ionic_react/*","app/*"]
  }