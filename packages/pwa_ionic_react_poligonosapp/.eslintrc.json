{
    "parserOptions": {
        "ecmaVersion": 6,
        "sourceType": "module",
        "ecmaFeatures": {
            "jsx": true
        }
    },
    "rules": {
        "react/jsx-uses-react": "true",
    "react/react-in-jsx-scope": "true",
        "semi": ["error", "always"],
        "quotes": ["error", "double"],
        "max-lines-per-function": "off",
        "no-constant-condition": "off",
        "no-await-in-loop": "off",
        "react-hooks/rules-of-hooks": "true",
        "no-console": "off"
    },
    "extends": "./node_modules/kcd-scripts/eslint.js"
}
